{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error",2],
        "linebreak-style": ["error","unix"],
        "no-console":"off",
        "depricatedMethod":"error",
        "no-unused-vars":"off",
        "no-await-in-loop":"error",
        "no-empty":"error",
        "no-restricted-modules": ["error", "underscore"],
        "eqeqeq": "error",
        "quotes": ["error","single"],
        "semi": ["error","always"]
    }
}